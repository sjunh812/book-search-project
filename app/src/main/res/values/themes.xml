<resources>
    <!-- Base application theme. -->
    <style name="Theme.BookProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/flow_600</item>
        <item name="colorPrimaryVariant">@color/flow_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/flow_600</item>
        <item name="colorSecondaryVariant">@color/flow_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.PrimarySurface">
        <item name="titleTextStyle">@style/TextAppearance.Toolbar.Title</item>
    </style>
</resources>